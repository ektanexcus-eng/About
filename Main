  let currentType = 'worker';

  function openForm(type) {
    currentType = type;
    const config = formConfig[type];
    document.getElementById('modal-title').textContent = config.title;
    
    let html = '';
    config.fields.forEach(f => {
      html += `<div style="margin-bottom:14px;">
        <label style="display:block; font-size:0.8rem; color:#555; margin-bottom:5px; font-weight:500;">
          ${f.label} ${f.required ? '<span style="color:var(--saffron)">*</span>' : ''}
        </label>`;
      
      if (f.type === 'textarea') {
        html += `<textarea name="${f.name}" rows="3" style="width:100%; padding:10px 12px; border:1.5px solid #ddd; border-radius:6px; font-size:0.85rem; font-family:inherit; resize:vertical;" placeholder="Type here..."></textarea>`;
      } else if (f.type === 'select') {
        html += `<select name="${f.name}" style="width:100%; padding:10px 12px; border:1.5px solid #ddd; border-radius:6px; font-size:0.85rem; font-family:inherit; background:white;">
          <option value="">-- Select --</option>`;
        f.options.forEach(o => html += `<option value="${o}">${o}</option>`);
        html += `</select>`;
      } else {
        html += `<input type="${f.type}" name="${f.name}" style="width:100%; padding:10px 12px; border:1.5px solid #ddd; border-radius:6px; font-size:0.85rem; font-family:inherit;" placeholder="${f.label.split('/')[0].trim()}">`;
      }
      html += `</div>`;
    });

    document.getElementById('form-fields').innerHTML = html;
    document.getElementById('reg-modal').style.display = 'block';
    document.body.style.overflow = 'hidden';
  }

  function closeForm() {
    document.getElementById('reg-modal').style.display = 'none';
    document.body.style.overflow = '';
  }

  function submitForm() {
    const config = formConfig[currentType];
    const inputs = document.querySelectorAll('#form-fields input, #form-fields select, #form-fields textarea');
    
    // Validate required
    let valid = true;
    inputs.forEach((el, i) => {
      const field = config.fields[i];
      if (field && field.required && !el.value.trim()) {
        el.style.border = '1.5px solid var(--saffron)';
        valid = false;
      } else {
        el.style.border = '1.5px solid #ddd';
      }
    });
    if (!valid) { alert('Please fill in all required fields marked with *'); return; }

    // Collect data
    let data = { type: currentType, submittedAt: new Date().toLocaleString('en-IN') };
    inputs.forEach((el, i) => {
      const field = config.fields[i];
      if (field) data[field.name] = el.value;
    });

    // Build mailto link (data goes to your email)
    let body = `EKTA Nexcus Registration\nType: ${currentType.toUpperCase()}\nDate: ${data.submittedAt}\n\n`;
    config.fields.forEach((f, i) => {
      body += `${f.label}: ${inputs[i]?.value || '-'}\n`;
    });

    const mailtoLink = `mailto:ektanexcus@gmail.com?subject=EKTA Nexcus Registration ‚Äì ${currentType.toUpperCase()}&body=${encodeURIComponent(body)}`;
    window.open(mailtoLink, '_blank');

    // Show success
    closeForm();
    const s = document.getElementById('success-msg');
    s.style.display = 'flex';
  }

  function setLang(lang) {
    // Block elements
    document.querySelectorAll('[data-lang]').forEach(el => {
      if (el.tagName === 'SPAN') return;
      el.style.display = el.dataset.lang === lang ?
